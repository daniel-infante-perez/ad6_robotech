<div class="hardware-structure">
    <div class="hardware-suite hardware-status item" data-item-id="{{_id}}" data-target="system.suite">
        <input class="smachk"  type="checkbox" name="system.suite" {{checked system.suite}}/>
    </div>
    <div style="width: 3px; height:30px;"></div>
    <div class="nature-disposition-input item" 
        style="padding-top: 7px;display: grid; grid-template-columns: 15px 141px 13px; 13px;" 
        data-item-id="{{_id}}">
        <div class="grid-1-1"><a class="item-delete"><i class="fas fa-trash faiconcolor fa-sm"></i></a></div>
        <div class="grid-1-2"  data-item-id="{{_id}}" data-field="name" >
            <input style="text-align: left;" class=" morwid invinput change" value="{{name}}"/>
            </div>
        <div class="grid-1-3"><a class="item-description"><i class="fas fa-comment faiconcolor fa-sm"></i></a></div>
        <div class="grid-1-4"><a class="item-edit"><i class="fas fa-regular fa-pen-to-square faiconcolor fa-sm"></i></a></div>
    </div>
    <div class="nature-disposition-chk hardware-status item" data-item-id="{{_id}}" data-target="system.status">
        <input class="smachk" type="checkbox" name="system.status" {{checked system.status}}/>
    </div>
</div>
